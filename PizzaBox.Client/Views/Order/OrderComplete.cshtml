@model PizzaBox.Client.Models.OrderViewModel
<section>
    <h2>Pizza List</h2>
    <ul>
        @foreach (var pizza in @Model.Pizzas)
        {
            <li>
                <label>@pizza.Crust.Name</label>
                <label>@pizza.Size.Name</label>
                @foreach (var topping in @pizza.Toppings)
                {
                    <label>@topping.Name</label>
                }
                <label>@pizza.PizzaPrice</label>
            </li>
        }
    </ul>
</section>
<section>
	<form asp-controller="user" asp-action="submitorder" method="post">
		<section>
			<input type="text" name="user" id="user" value="@Model.User">
		</section>
		<section>
			<select asp-for="@Model.Store">
				@foreach (var store in @Model.Stores)
				{
				<option value="@store.Name">@store.Name</option>
				}
			</select>
		<section>
			<button type="submit">Place Order</button>
		</section>
	</form>
</section>